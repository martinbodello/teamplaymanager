@using System.Web.Mvc
@using System.Web.Mvc.Html
@using System.Web.Optimization
@model TPM.Models.PersonalEsp

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Editar Personal Especializado
      <div class="pull-right">
          <a class="link-panel" href="/PersonalEsp">
              <img src="~/Images/boton_volver.png" />
              Volver
          </a>
      </div>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("Edit", "PersonalEsp", FormMethod.Post))
        {
                        
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Personal Especializado</legend>
                <div class="well">
                    <div class="titleDatos"><span class="label label-default">Datos Personales</span></div>
                    <div class="createJugador" style="margin-top:15px">
                        <div style="padding-bottom: 15px; text-align: center;">
                            @Html.ValidationMessageFor(model => model.Nombre, "Debe completar los campos obligatorios.")
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Nombre:</p>
                            </div>                            
                            <div class="col-xs-3">
                                @Html.EditorFor(model => model.Nombre)
                            </div>
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Apellido:</p>                               
                            </div>
                            <div class="col-xs-3">
                                @Html.EditorFor(model => model.Apellido)                            
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Tipo de documento.</p>
                            </div>                            
                            <div class="col-xs-3">
                                 @Html.DropDownListFor(model => model.TipoDocId, new SelectList
                                (Model.TipoDocLista, "TipoDocId", "TipoDocNombre", 1))
                            </div>
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Número de documento:</p>                               
                            </div>
                            <div class="col-xs-3">
                                 @Html.TextBoxFor(model => model.NumeroDoc)                          
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Domicilio:</p>
                            </div>                            
                            <div class="col-xs-3">
                                 @Html.EditorFor(model => model.Domicilio)
                            </div>
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Localidad:</p>                               
                            </div>
                            <div class="col-xs-3">
                                  @Html.DropDownListFor(model => model.LocalidadId, new SelectList
                                    (Model.LocalidadLista, "LocalidadId", "LocalidadNombre"))                         
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Telefono:</p>
                            </div>                            
                            <div class="col-xs-3">
                                 @Html.EditorFor(model => model.Telefono)
                            </div>
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Email:</p>                               
                            </div>
                            <div class="col-xs-3">
                                  @Html.EditorFor(model => model.Email)                       
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <p class="textCreateJugador">Especialidad:</p>
                            </div>                            
                            <div class="col-xs-3">
                                @Html.DropDownListFor(model => model.EspecialidadId, new SelectList
                               (Model.EspecialidadLista, "EspecialidadId", "EspecialidadNombre"))
                            </div>                           
                        </div>
                    </div> 
                </div>
                <input class="btn btn-primary pull-right" type="submit" value="Guardar" />
        </fieldset>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
    </div>
